BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 40
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                id: output_change
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                id: output_change
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
    Button:
        text: 'Convert m to km'
        on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        text: 'Welcome To Convert App'
        font_size: 30
        color: (1,1,0,1)